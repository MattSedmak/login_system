<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login</title>
  <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
  <div class="container">
    <p>Welcome <%=user.name%>, <a href="/logout">Log out</a></p>


    <form action="/todolist" method="post" class="form">
      <h4>Your List</h4>
      <input type="text" name="task" placeholder="My task..." aria-label="my task" autocomplete="off" />
      <button type="submit">Add</button>
    </form>
    <%- include("message") %>
      <ul class="list">
        <% todos.forEach(todo=> { %>
          <% if(todo._id==taskId){%>
            <form action="/todolist/edit/<%=todo._id%>" method="post" class="form">
              <input type="text" name="task" value="<%= todo.task%>" aria-label="my task" autocomplete="off"
                autofocus />
              <button type="submit">Update</button>
              <a href="/todolist">Cancel</a>
            </form>
            <%} else{%>
              <li>
                <%= todo.task %>
                  <a href="/todolist/edit/<%= todo.id %>">Edit</a>
                  <a href="/todolist/delete/<%= todo.id %>">Delete</a>
              </li>
              <%}%>
                <% }) %>
      </ul>
  </div>
</body>

</html>